<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.LifecycleActivity">


    <com.example.myapplication.wight.PieChart
        android:id="@+id/Pie"
        custom:autoCenterPointerInSlice="true"
        custom:highlightStrength="1.12"
        custom:labelColor="@android:color/black"
        custom:labelHeight="20dp"
        custom:labelPosition="left"
        custom:labelWidth="110dp"
        custom:labelY="85dp"
        custom:pieRotation="0"
        custom:pointerRadius="4dp"
        custom:showText1="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="@android:color/white"
        android:padding="10dp" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reset" />
</LinearLayout>
