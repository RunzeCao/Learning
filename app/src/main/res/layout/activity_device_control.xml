<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.DeviceControlActivity">
    <Button
        android:id="@+id/btn_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写" />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读" />

    <Button
        android:id="@+id/btn_persional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息" />

    <Button
        android:id="@+id/btn_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备型号" />

    <Button
        android:id="@+id/btn_device_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备编号" />

    <Button
        android:id="@+id/btn_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="步数" />

    <Button
        android:id="@+id/btn_light_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="触摸发光" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_info"/>


</LinearLayout>
